# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts
*.sh text eol=lf

# Python files
*.py text eol=lf

# JavaScript files
*.js text eol=lf
*.jsx text eol=lf

# JSON files
*.json text eol=lf

# Markdown files
*.md text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Binary files
*.pth binary
*.pt binary
*.onnx binary
*.ckpt binary
*.mp4 binary
*.jpg binary
*.jpeg binary
*.png binary
*.glb binary
*.gltf binary

